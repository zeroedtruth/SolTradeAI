{
  "compilerOptions": {
    "target": "es2020",
    "lib": [
      "ES2021",
      "dom",
      "esnext.asynciterable"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@routes/*": [
        "routes/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@config": [
        "config"
      ],
      "@config/abi": [
        "config/abi"
      ],
      "@services/*": [
        "services/*"
      ],
      "@controllers/*": [
        "controllers/*"
      ],
      "@middlewares/*": [
        "middlewares/*"
      ],
      "@interfaces/*": [
        "interfaces/*"
      ],
      "@dtos/*": [
        "dtos/*"
      ],
      "@exceptions/*": [
        "exceptions/*"
      ],
      "@database": [
        "database"
      ],
      "@models": [
        "database/models"
      ],
      "@tests/*": [
        "tests/*"
      ]
    },
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "pretty": false,
    "sourceMap": false,
    "outDir": "./build",
    "allowJs": true,
    "noEmit": false,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "./src/**/*",
    "./.env",
    "./api/src/services/baseService.service.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
